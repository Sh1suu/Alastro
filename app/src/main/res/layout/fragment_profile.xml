<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:textColor="@color/text_dark"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@color/card_white"
        android:scaleType="centerInside"
        android:padding="20dp"
        app:shapeAppearanceOverlay="@style/CircleImage"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Username here]"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvUsername">

        <include layout="@layout/item_profile_field" android:id="@+id/fieldFirst"/>
        <include layout="@layout/item_profile_field" android:id="@+id/fieldLast"/>
        <include layout="@layout/item_profile_field" android:id="@+id/fieldPhone"/>
        <include layout="@layout/item_profile_field" android:id="@+id/fieldAbout"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>